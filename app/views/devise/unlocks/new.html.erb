<div class="row">
   <div class="col-md-3"></div>
   <div class="col-md-6">

      <h2>잠금 해제 하기</h2>

      
      <%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.email_field :email, autofocus: true, label:"이메일" %>
      
      <div align="center">  
         <button type="submit" class="btn btn-danger">인증 메일 전송</button>
      </div>
        
      <% end %>
      
      <%= render "devise/shared/links" %>
   </div>
</div>
